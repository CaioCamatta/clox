{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Build & Debug Main",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/clox",
      "args": ["${input:testFile}"],
      //   "args": ["test/chap17_compiling.clox"],
      //   "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Make debug program",
    },
    {
      "name": "Debug Table Benchmark",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/test/benchmark/table_benchmark",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Make debug table benchmark",
    }
  ],
  "inputs": [
    {
      "id": "testFile",
      "type": "promptString",
      "description": "Test .clox file to debug",
      "default": "test/chap18_types.clox"
    }
  ]
}
