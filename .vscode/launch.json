{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C Build & Debug File",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/clox",
      //   "args": ["test/chap17_compiling.clox"],
      "args": ["${input:testFile}"],
      //   "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "tasks",
      "miDebuggerPath": "/usr/bin/gdb"
    }
  ],
  "inputs": [
    {
      "id": "testFile",
      "type": "promptString",
      "description": "Test .clox file to debug",
      "default": "test/chap17_compiling.clox"
    }
  ]
}
